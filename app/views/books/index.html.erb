<div class="index-contents">
  <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book.id) %></td>
          <td><%= link_to "Edit",edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <h1>New book</h1>
    <%= form_with model:@book,local:true do |f| %>
      <%= render "layouts/error_form",model: @book %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <div class="create-book"><%= f.submit "Create Book" %></div>
    <% end %>
  </div>
